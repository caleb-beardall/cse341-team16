"/orders/{userId}": {
      "get": {
        "tags": ["Orders"],
        "summary": "Get user's orders",
        "description": "Get all orders for the specific user with optional filtering and pagination",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "User ID"
          },
          {
            "name": "status",
            "in": "query",
            "type": "string",
            "enum": ["pending", "paid", "cancelled"],
            "description": "Filter orders by status"
          },
          {
            "name": "sort",
            "in": "query",
            "type": "string",
            "default": "createdAt",
            "description": "Field to sort by"
          },
          {
            "name": "order",
            "in": "query",
            "type": "string",
            "enum": ["asc", "desc"],
            "default": "desc",
            "description": "Sort order"
          },
          {
            "name": "page",
            "in": "query",
            "type": "integer",
            "default": 1,
            "description": "Page number"
          },
          {
            "name": "limit",
            "in": "query",
            "type": "integer",
            "default": 10,
            "description": "Items per page"
          }
        ],
        "responses": {
          "200": {
            "description": "Orders retrieved successfully",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                },
                "total": {
                  "type": "integer"
                },
                "page": {
                  "type": "integer"
                },
                "pages": {
                  "type": "integer"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/orders/": {
      "post": {
        "tags": ["Orders"],
        "summary": "Create a new order",
        "description": "Create a new order with ticket tiers from the same event",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "userId": {
                  "type": "string",
                  "description": "User ID"
                },
                "eventId": {
                  "type": "string",
                  "description": "Event ID"
                },
                "items": {
                  "type": "array",
                  "description": "Array of ticket tier items",
                  "items": {
                    "type": "object",
                    "properties": {
                      "tierId": {
                        "type": "string",
                        "description": "Ticket tier ID"
                      },
                      "quantity": {
                        "type": "number",
                        "description": "Number of tickets"
                      }
                    }
                  }
                },
                "holder_info": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "identification_number": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Order created successfully"
          },
          "400": {
            "description": "Validation errors - insufficient stock or items from different events"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/orders/{id}/pay": {
      "post": {
        "tags": ["Orders"],
        "summary": "Confirm payment for order",
        "description": "Confirm payment and generate tickets for the order",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Order ID"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "userId": {
                  "type": "string",
                  "description": "User ID"
                },
                "payment_id": {
                  "type": "string",
                  "description": "Payment ID from payment processor"
                },
                "holder_info": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "identification_number": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Payment confirmed and tickets issued",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "order": {
                      "type": "object"
                    },
                    "tickets": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          },
